<diagram dimensions="(250,250)" margins="5"
         xmlns="https://prefigure.org">
  <coordinates bbox="(-1.5,-1.5,6,6)">
    <axes decorations="no" stroke="gray"/>
    <definition>center=(2,2.5)</definition>
    <definition>ellipse(t)=(3*cos(t),2*sin(t))</definition>
    <repeat parameter="s in [1,0.75,0.5,0.25]">
      <definition>g(t)=s*ellipse(t) + center</definition>
      <parametric-curve function="g" domain="(0,2*pi)" 
                        stroke="blue"/>
    </repeat>
    <point p="center" fill="blue" stroke="none" size="2"/>

  </coordinates>
</diagram>
