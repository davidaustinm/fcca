<diagram dimensions="(250,250)" margins="5"
         xmlns="https://prefigure.org">
  <definition>b=4</definition>
  <coordinates bbox="(-b,-b,b,b)">
    <axes decorations="no"/>
    <repeat parameter="k=1..4">
      <line endpoints="((-b,k),(b,k))" stroke="red" thickness="2"/>
      <line endpoints="((-b,-k),(b,-k))" stroke="red" thickness="2"/>
    </repeat>
    <repeat parameter="k=1..4">
      <line endpoints="((k,-b),(k,b))" stroke="blue" dash="9 9"
            thickness="2"/>
      <line endpoints="((-k,-b),(-k,b))" stroke="blue" dash="9 9"
            thickness="2"/>
    </repeat>
  </coordinates>
</diagram>
