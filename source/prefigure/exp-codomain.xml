<diagram dimensions="(250,250)" margins="5"
         xmlns="https://prefigure.org">
  <definition>size=8</definition>
  <coordinates bbox="(-size,-size,size,size)">
    <axes decorations="no" stroke="gray"/>
    <repeat parameter="k=-2..2">
      <circle center="(0,0)" radius="exp(k)" stroke="blue" 
            thickness="2"/>
    </repeat>
    <repeat parameter="angle in [5*pi/6, pi/3, 0, -pi/3, -5*pi/6]">
      <definition>p=(cos(angle), sin(angle))</definition>
      <line endpoints="(e^-2*p,e^2*p)" stroke="red"
            dash="9 9"
            thickness="2"/>
    </repeat>
  </coordinates>
</diagram>
