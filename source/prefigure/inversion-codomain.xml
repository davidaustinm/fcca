<diagram dimensions="(250,250)" margins="5"
         xmlns="https://prefigure.org">
  <definition>b=4</definition>
  <coordinates bbox="(-b,-b,b,b)">
    <axes decorations="no"/>
    <repeat parameter="k=1..4">
      <definition>x0=k/4</definition>
      <circle center="(1/(2*x0),0)" radius="1/(2*x0)"
              stroke="red"/>
      <circle center="(1/(-2*x0),0)" radius="1/(2*x0)"
              stroke="red"/>
    </repeat>
    <repeat parameter="k=1..4">
      <definition>y0=k/4</definition>
      <circle center="(0,1/(2*y0))" radius="1/(2*y0)"
              stroke="blue" dash="9 9"/>
      <circle center="(0,1/(-2*y0))" radius="1/(2*y0)"
              stroke="blue" dash="9 9"/>
    </repeat>
  </coordinates>
</diagram>
