<diagram dimensions="(350,200)" margins="(25,25,5,5)"
         xmlns="https://prefigure.org">
  <coordinates bbox="(-0.2,-0.1,3.5,1.1)">
    <axes decorations="yes" h-pi-format="yes"
          vlabels="(0,0.5,1)"
          hlabels="(0,pi/4,pi)"/>
    <repeat parameter="n=1..20">
      <definition>f(x)=(sin(x))^n</definition>
      <graph function="f" thickness="1" domain="(0,pi)"/>
    </repeat>
    <definition>f(x)=sin(x)</definition>
    <line endpoints="((0,0),(pi,0))" stroke="red" thickness="3"/>
    <point p="(pi/2,0)" fill="white" stroke="none"/>
    <point p="(pi/2,1)" fill="red" stroke="none"/>
  </coordinates>
</diagram>
